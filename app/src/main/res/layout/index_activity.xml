<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="lv.iconcept.pastsfoto.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/pfIndexWhite"
        android:clickable="true">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pf_index_background"
        android:gravity="top"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pf_index_box_border"
        android:gravity="center_vertical|center_horizontal"
        android:scrollbars="none"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">


            <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/pic3"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" />

            <TextView
            android:text="@string/bilzu_izvele_augsupieladei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#000"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

            <LinearLayout
            android:orientation="horizontal"
            android:text="@string/pievienot_bildes"
            android:id="@+id/pf_index_selectfilesButton"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150px"
            android:background="@color/pfOranzs"
            android:paddingLeft="30px"
            android:paddingRight="38px"
            android:capitalize="characters"
            android:textColor="@color/baltaKrasa"
            android:textStyle="bold"
            android:height="54px"
            android:foregroundGravity="left|center_vertical"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true">

                <ImageView
                android:layout_width="15dp"
                android:layout_height="200px"
                app:srcCompat="@drawable/pf_index_button_icon"
                android:id="@+id/pf_index_selectfilesButton_image" />

                <TextView

                android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="@string/pievienot_bildes"
                    android:ems="10"
                    android:id="@+id/pf_index_selectfilesButton_text"
                    android:textColor="@color/pfIndexWhite"
                    android:textStyle="bold"
                    android:layout_marginLeft="20px" />

            </LinearLayout>


        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:baselineAlignBottom="true"


            app:srcCompat="@mipmap/logo"
            android:id="@+id/imageView2"
            android:layout_marginTop="10px" />
    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


</FrameLayout>
