<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="lv.iconcept.pastsfoto.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:baselineAlignBottom="true"


        app:srcCompat="@mipmap/pf_actionbar_logo"
        android:id="@+id/imageView2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/pf_index_background3"
            android:gravity="top"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_marginTop="109dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="200dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/pf_index_box_border"
            android:gravity="center_horizontal"
            >


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@mipmap/pic3"
                android:id="@+id/imageView4"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp" />

            <TextView
                android:text="@string/bilzu_izvele_augsupieladei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#000"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <Button
                android:text="@string/pievienot_bildes"
                android:layout_width="wrap_content"
                android:id="@+id/button"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="58dp"
                android:background="@color/pfOranzs"
                android:paddingLeft="71px"
                android:paddingRight="38px"
                android:capitalize="characters"
                android:textColor="@color/baltaKrasa"
                android:textStyle="bold"
                android:layout_height="40dp"
                android:width="230px"
                android:height="54px"
                android:textSize="14px"
                android:foreground="@mipmap/pic4"
                android:foregroundGravity="left|center_vertical" />
        </RelativeLayout>


    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


</FrameLayout>
